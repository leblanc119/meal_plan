<div class="page-header">
  <h2>
    My Favorite Meals
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Meal</th>
        <th>Tags</th>
        <th>Actions</th>
      </tr>

      <% current_user.favorites.each do |favorite| %>
      <tr>
        <td><a href="/meals/<%= favorite.meal_id %>"><%= favorite.meal.name %></a></td>
        <td>
          <% favorite.meal.meal_tags.each do |mealtag| %>
          <span class="label label-warning"><%= mealtag.tag.name %></span>
          <% end %>
        </td>
        <td>
          <a href="/delete_favorite/<%= favorite.id %>" class = "btn btn-sm" role="button"><i class="fa fa-heart" aria-hidden="true"></i> Remove from Favorites </a>
          <a href="/mealplans/new_meal/<%= favorite.meal.id %>" class = "btn btn-sm" role="button"><i class="fa fa-th-list" aria-hidden="true"></i> Add to a Meal Plan </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
