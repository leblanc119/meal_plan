<!-- Validation failure messages -->
<% if @mealtime.errors.any? %>
  <% @mealtime.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Mealtime</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_mealtime" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for time -->
      <div class="form-group">
        <label for="time" class="control-label">
          Time
        </label>

        <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @mealtime.time %>">
      </div>

      <button class="btn btn-success">
        Create Mealtime
      </button>
      or
      <a href="/mealtimes">Cancel</a>
    </form>
  </div>
</div>
