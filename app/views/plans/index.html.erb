<div class="page-header">
  <h2>
    My Plans
    <a href="/plans/new" class="btn btn-sm btn-success">New Plan</a>
    <% if @today_plan != nil  %>
      <a href="/plans/<%= @today_plan.id  %>" class="btn btn-sm btn-warning">View Today's Plan</a>
    <% end %>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @plans.each do |plan| %>
        <% if plan.user.id == current_user.id %>
      <tr>
        <td><%= plan.date.strftime("%A - %B %e, %Y") %></td>
        <td>

          <a href="/plans/<%= plan.id %>" class="btn btn-primary btn-xs">View Daily Plan</a>
          <a href="/plans/<%= plan.id %>" class="btn btn-warning btn-xs">Edit</a>
          <a href="/delete_plan/<%= plan.id %>" class="btn btn-danger btn-xs" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
