<div class="page-header">
  <h2>
    Tags
    <a href="/tags/new" class="btn btn-lg btn-success btn-sm">New Tag</a>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
      </tr>

      <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
